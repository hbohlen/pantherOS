{
  "$schema": "https://opencode.ai/config.json",
  "username": "hbohlen",
  "autoupdate": true,
  "plugin": ["@tarquinen/opencode-dcp", "opencode-skills"],
  "theme": "rosepine",

  "mcp": {
    "nixos": {
      "type": "local",
      "command": ["nix", "run", "github:utensils/mcp-nixos", "--"],
    },
  },

  "lsp": {
    "nix": {
      "command": ["nixd"],
      "extensions": [".nix"]
    }
  },

  "formatter": {
    "nix": {
      "command": ["nixpkgs-fmt"],
      "extensions": [".nix"]
    }
  },
}
